        <div class="container">


            <h1 style="text-align: left; font-size: 28px">Published Notes</h1>
            <div class="row" style="margin-top: 20px">
                <div class="col-md-6">

                    <select id="st" name="seller" onchange="onSubmit()">
                        <option value="">Seller Name</option>
                        @foreach (NoteMarket.Models.NoteDetail noteDetail in noteDetails)
                        {
                            <option value="@noteDetail.OwnerId">

                                @if (noteDetail.OwnerId == 11)
                                {<p>Dhruvinsinh</p>}
                                @if (noteDetail.OwnerId == 10)
                                {<p>mira</p>}

                            </option>
                        }
                    </select>
                    <script>
                                            $("#st").val("@Request.QueryString["Notedetail"]");
                    </script>

                </div>
                <div class="col-md-3">
                    <input type="search" placeholder="Search" class="searchb">
                    <i toggle="#search" class="fa fa-search field-icon1"></i>
                </div>
                <div class="col-md-3">
                    <a class="btn11">SEARCH</a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table" style="margin-top: 30px;">
                    <tbody>
                        <tr>
                            <th scope="col">SR NO.</th>
                            <th scope="col">NOTE TITEL</th>
                            <th scope="col">CATEGORY</th>
                            <th scope="col">SELL TYPE</th>
                            <th scope="col">PRICE</th>
                            <th scope="col">SELLER</th>
                            <th scope="col"></th>
                            <th scope="col">PUBLISHED DATE</th>
                            <th scope="col">APPROVED BY</th>
                            <th scope="col">NUMBER OF<br> DOWNLOADS</th>
                            <th scope="col"></th>
                        </tr>
                    </tbody>
                    <tbody>
                        
                            @foreach (NoteMarket.Models.NoteDetail note1 in Model)
                            {
                                if (note1.Status == "Published")
                                {
                                    <tr>
                        <th scope="row">1</th>
                            <td style="color:#6255a5">@note1.NoteTitle</td>
                            <td>@note1.Category</td>
                            <td>
                                @if (@note1.SellFor == true)
                                {
                                    <p>Paid</p>
                                }
                                @if (@note1.SellFor == false)
                                {
                                    <p>Free</p>
                                }
                            </td>
                            <td>$@note1.SellPrice</td>
                            <td>
                                @if (note1.OwnerId == 11)
                                {<p>Dhruvinsinh</p>}
                                                        @if (note1.OwnerId == 10)
                                                        {<p>mira</p>}
                                                    </td>
                            <td><a href="/NoteDetails/NoteDetail?id=@note1.Id"><img src="~/images/Dashboard/eye.png"></a></td>
                            <td>@note1.ApprovedDate</td>
                            <td>arjun</td>
                            <td>75</td>
                            <td>
                                <div class="dropdown">
                                    <i class="fa fa-ellipsis-v" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    </i>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item1" href="#">Download Notes</a><br>
                                        <a class="dropdown-item1" href="#">View More Details</a>
                                        <a class="dropdown-item1" href="#">Unpblish</a>
                                    </div>
                                </div>
                            </td>

                            </tr>
                                }
                            }
                    </tbody>
                </table>
