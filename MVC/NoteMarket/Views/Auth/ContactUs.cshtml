@model NoteMarket.Models.ContactUsModel
@{
    ViewBag.Title = "ContactUs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Logo-->
<div class="container">
    <a href="#user" class="navbar-brand smooth-scroll">
        <img src="~/images/home/logo.png" alt="top logo" class="topi" style="border-radius: 0%">
    </a>
    <div class="container">
        <nav class="navbar navbar-fixed-top">

            <!-- Mobile Menu Open Button -->
            <span id="mobile-nav-open-btn">&#9776;</span>
            <!-- Logo -->
            <!-- Mobile Menu -->
            <div id="mobile-nav">
                <!-- open -->
                <span id="mobile-nav-close-btn">&times;</span>

                <div id="mobile-nav-content">
                    <ul class="nav">
                        <li><a class="smooth-scroll" href="#SearchNotes">Search Notes</a></li>
                        <li><a class="smooth-scroll" href="#SellYourNotes">Sell Your Notes</a></li>

                        <li><a class="smooth-scroll" href="#FAQ">FAQ</a></li>
                        <li><a class="smooth-scroll" href="#contactUs">ContactUs</a></li>

                        <li> <a class="btn">LogIn</a> </li>
                    </ul>
                </div>
            </div>

        </nav>
        <div class="collapse navbar-collapse" style="margin-top: 10px;">
            <ul class="nav navbar-nav pull-right">
                <li><a class="smooth-scroll" href="#SearchNotes" style="color: black">Search Notes</a></li>
                <li><a class="smooth-scroll" href="#SellYourNotes" style="color: black">Sell Your Notes</a></li>

                <li><a class="smooth-scroll" href="#FAQ" style="color: black">FAQ</a></li>
                <li><a class="smooth-scroll" href="#contactUs" style="color: black">ContactUs</a></li>

                <li> <a class="btn">LogIn</a> </li>
            </ul>
        </div>
    </div>
</div>
<!--profile pic-->
<div id="statment">
    <div class="content-box-lg">
        <div class="container">
            <div class="row">
                <div class="col-md-12 wow  wow fadeInUp">
                    <div id="tech-statment" class="text-center">
                        <h3>Contact Us</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<section id="contactus">

    <!-- form -->
    <div id="form20">
        <form action="/Auth/ContactUs" method="post" id="ContactUs">
            <div class="contus">
                <h4>Get in Touch</h4>
                <h5>Let us know how to get back to you</h5>
            </div>
            <div class="content-box-md" style="margin-bottom: 20px;">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <div id="cntu-left1">
                                <div clas="formgroup">
                                    <label>First Name*</label>
                                    @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your First Name" } })
                                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "error" })
                                </div>
                                <div class="formgroup">
                                    <label>Email Address*</label>
                                    @Html.EditorFor(m => m.EmaiId, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your email" } })
                                    @Html.ValidationMessageFor(m => m.EmaiId, "", new { @class = "error" })

                                </div>
                                <div class="formgroup">
                                    <label>Subject*</label>
                                    @Html.EditorFor(m => m.Subject, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Your Subject" } })
                                    @Html.ValidationMessageFor(m => m.Subject, "", new { @class = "error" })
                                </div>

                            </div>

                        </div>

                        <div class="col-md-6 col-sm-6">
                            <div id="cntu-right1">
                                <div calss="formgroup">
                                    <label>Comment/Questions*</label><br>
                                    @Html.EditorFor(m => m.comment, new { htmlAttributes = new { @class = "form-control1", placeholder = "Comment" } })
                                    @Html.ValidationMessageFor(m => m.comment, "", new { @class = "error" })
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <a class="btns" href="javascript:$('#ContactUs').submit();">SUBMIT</a>
            <div class="container" style="margin-top: 50px;">
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <p>
                            Copyright &copy; Tatvasoft Allrights Reserved
                        </p>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <ul class="social-list  pull-righ">
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </form>
    </div>
    @if (TempData["Success"] != null)
    {
        <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
    }


</section>


