<section id="buyerreq">
    <div class="fancy-line" style="margin-bottom: 20px;">
        <hr class="line1">
    </div>
    <div class="dash5">
        <div class="container" style="margin-top: 60px;">
            <div class="row">
                <div class="col-md-6 col-sm-6">
                    <h4>Buyer Requests</h4>
                </div>
                <div class="col-md-6 col-sm-6">
                    <input type="search" placeholder="Search" class="searchb">
                    <i toggle="#search" class="fa fa-search field-icon1"></i>
                    <a class="btn11">SEARCH</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container" style="margin-top: 20px">
        <div class="table-responsive">
            <table class="table">
                <tbody>
                    <tr>
                        <th scope="col">SR NO.</th>
                        <th scope="col">Note TITLE</th>
                        <th scope="col">CATEGORY</th>
                        <th scope="col">BUYER</th>
                        <th scope="col">PHONE NO</th>
                        <th scope="col">SELL TYPE</th>
                        <th scope="col">PRICE</th>
                        <th scope="col">DOWNLOADED DATE/TIME </th>
                        <th scope="col"> </th>
                        <th scope="col"> </th>
                    </tr>
                </tbody>
                <tbody>

                    @foreach (var b in Model.Buy)
                    {
                        if (b.aprov == "")
                        {
                        <tr>
                            <th scope="row">1</th>
                            <td style="color: #6255a5">@b.title</td>
                            <td>@b.course</td>
                            <td>@b.emailid</td>
                            <td>@b.phoneno</td>
                            <td>
                                @if (b.sellfor == true)
                                {
                                    <p>Paid</p>
                                }
                                @if (b.sellfor == false)
                                {
                                    <p>Free</p>
                                 }
                            </td>
                            <td>@b.sellprice</td>
                            <td>@b.reqdate </td>
                            <td><img src="/images/Dashboard/eye.png"></td>
                            <td>
                                <div class="dropdown">
                                    <i class="fa fa-ellipsis-v" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    </i>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item1" href="/NoteDetails/aprovereq?sellerid=@b.id">Allow Download</a><br>
                                        </div>
                                    </div>
                            </td>
                        </tr>
                        }
                    }



                    </tbody>
            </table>
        </div>
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link btn-pagination" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">4</a></li>
            <li class="page-item"><a class="page-link" href="#">5</a></li>
            <li class="page-item">
