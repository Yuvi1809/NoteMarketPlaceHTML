<section id="dashboard">
    <form action="/NoteDetails/DashBoard" method="get" id="searchs">

        <div class="fancy-line" style="margin-bottom: 20px;">
            <hr class="line1">
        </div>
        <div class="dash1">
            <div class="container" style="margin-top: 60px;">
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <h1>Dashboard</h1>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <a class="btn12" href="/NoteDetails/AddNotes">ADDNOTES</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="dash2">
            <div class="container" style="margin-top: 30px;">
                <div class="row">
                    <div class="col-md-6 col-sm-12" style="border: 1px solid #d1d1d1">
                        <div class="row">
                            <div class="col-md-4 col-sm-4" style="border: 1px solid #d1d1d1">
                                <img src="~/images/Dashboard/earning-icon.svg" alt="das" style="border-radius: 0%; text-align: left;">
                                <h1 style="margin-top: 5px;">My Earning</h1>
                            </div>
                            <div class="col-md-4 col-sm-4">
                                <h1>100</h1>
                                <h5 style="text-align: center">Number of ntes sold</h5>
                            </div>
                            <div class="col-md-4 col-sm-4">
                                <h1>$10,00,000</h1>
                                <h5 style="text-align: center">Money Earned</h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2 col-sm-4" style=" border: 1px solid #d1d1d1">
                        <h1>38</h1>
                        <h5 style="text-align: center">My Downloads</h5>
                    </div>
                    <div class="col-md-2 col-sm-4" style=" border: 1px solid #d1d1d1;">
                        <h1>12</h1>
                        <h5 style="text-align: center;">My Rejected Notes</h5>
                    </div>
                    <div class="col-md-2 col-sm-4" style="border: 1px solid #d1d1d1;">
                        <h1>102</h1>
                        <h5 style="text-align: center">Buyer Requests</h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="dash3">
            <div class="container" style="margin-top: 60px;">
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <h4>In Progress Notes</h4>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <input type="search" placeholder="Search" class="searchb" value="@Request.QueryString["searchn"]" name="searchn" onchange='onSubmit()'>
                        <i toggle="#search" class="fa fa-search field-icon1"></i>
                        <a class="btn11">SEARCH</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="container table-responsive-sm" style="margin-top: 20px">
            <div class="table-responsive">
                <table class="table" @*id="tblCourse"*@ style="border: 1px solid #d1d1d1">
                    <tbody>
                        <tr>
                            <th scope="col">ADDED DATE</th>
                            <th scope="col">TITLE</th>
                            <th scope="col">CATEGORY</th>
                            <th scope="col">STATUS</th>
                            <th scope="col">ACTION</th>
                        </tr>
                    </tbody>
                    <tbody>

                        @foreach (NoteMarket.Models.NoteDetail note1 in Model)
                        {
                            if (note1.Status == "Drafted")
                            {
                            <tr>
                                <th scope="row">@note1.ApprovedDate</th>
                                <td>@note1.NoteTitle</td>
                                <td>@note1.Category</td>
                                <td>@note1.Status</td>

                                <td>
                                    <img src="~/images/images/delete.png" alt="dlt" style="margin-right: 10px">
                                    <a href="/NoteDetails/EditNotes?noteid=@note1.Id"><img src="~/images/Dashboard/edit.png" alt="edt" ></a>
                                </td>

                            </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link btn-pagination " href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">4</a></li>
                <li class="page-item"><a class="page-link" href="#">5</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="dash5">
            <div class="container" style="margin-top: 60px;">
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <h4>Publised Notes</h4>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <input type="search" placeholder="Search" class="searchb" value="@Request.QueryString["searchn"]" name="searchn" onchange='onSubmit()'>
                        <i toggle="#search" class="fa fa-search field-icon1"></i>
                        <a class="btn11">SEARCH</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="container table-responsive-sm" style="margin-top: 20px">
            <div class="table-responsive">
                <table class="table" style="border: 1px solid #d1d1d1" @*id="tblCourse"*@>
                    <tbody>
                        <tr>
                            <th scope="col">ADDED DATE</th>
                            <th scope="col">TITLE</th>
                            <th scope="col">CATEGORY</th>
                            <th scope="col">SELL TYPE</th>
                            <th scope="col">PRICE</th>
                            <th scope="col">ACTION</th>
                        </tr>
                    </tbody>
                    <tbody>

                        @foreach (NoteMarket.Models.NoteDetail note1 in Model)
                        {
                        <tr>
                            <th scope="row">@note1.ApprovedDate</th>
                            <td>@note1.NoteTitle</td>
                            <td>@note1.Category</td>
                            <td>
                                @if (@note1.SellFor == true)
                                {
                                    <p>Paid</p>
                                }
                                @if (@note1.SellFor == false)
                                {
                                    <p>Free</p>
                                 }
                            </td>
                            <td>@note1.SellPrice</td>
                            <td>
                                <img src="~/images/Dashboard/eye.png">
                            </td>

                        </tr>
                        }

                    </tbody>
                </table>
            </div>
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link btn-pagination " href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">4</a></li>
                <li class="page-item"><a class="page-link" href="#">5</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="container" style="margin-top: 50px;">
            <div class="row">
                <div class="col-md-6 col-sm-6">
                    <p>
                        Copyright &copy; Tatvasoft Allrights Reserved
                    </p>
                </div>
                <div class="col-md-6 col-sm-6">
                    <ul class="social-list pull-righ">
                        <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                        <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </form>
</section>
