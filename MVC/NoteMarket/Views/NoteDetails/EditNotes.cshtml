<section id="addnotes">
    <!-- form -->
    <div style="margin-top: 60px">
        <form action="/NoteDetails/EditNotes?noteid=@Model.Title" method="post" enctype="multipart/form-data" id="EditNotes">
            <div id="forminer12">
                <h1>Basic Profile Details</h1>
                <div class="content-box-md">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <div id="user-left1">
                                    <div clas="pa">
                                        <label>Title*</label>
                                        @Html.EditorFor(m => m.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Please Enter  Title" } })

                                    </div>
                                    <label for="picture">Display  Picture</label>
                                    <input type="file" Name="dp" class="form-control2">

                                </div>
                                <label>Type</label>
                                <select id="type" class="form-control" name="type">



                                    <option value="@Model.type">@Model.type</option>

                                </select>

                            </div>
                            <div class="col-md-6 col-sm-6">
                                <div id="user-right1">
                                    <div calss="formgroup">
                                        <label>Category*</label>
                                        <select class="form-control" id="category" name="category">

                                            <option value="@Model.category">@Model.category</option>

                                        </select>
                                        <label>Upload Notes*</label><br>
                                        <input type="file" name="uploadnote" class="form-control3">
                                        <label>No of pages</label>
                                        @Html.EditorFor(m => m.Noofpage, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter no of pages" } })
                                        @Html.ValidationMessageFor(m => m.Noofpage, "", new { @class = "error" })

                                    </div>
                                </div>
                            </div>
                            <label>Description</label><br>
                            @Html.EditorFor(m => m.Disc, new { htmlAttributes = new { @class = "form-control6" } })
                            @Html.ValidationMessageFor(m => m.Disc, "", new { @class = "error" })


                        </div>
                    </div>

                    <h1>Institution Information</h1>
                    <div class="content-box-md" style="margin-bottom: 40px;">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-6 col-sm-6">
                                    <div id="user-left3">

                                        <label>Country</label><br>

                                        <select class="form-control" id="country" name="country">
                                            <option value="@Model.country">@Model.country</option>
                                        </select>

                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6">
                                    <div id="user-right3">
                                        <label>Institution Name</label>
                                        @Html.EditorFor(m => m.instituename, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your institute name" } })
                                        @Html.ValidationMessageFor(m => m.instituename, "", new { @class = "error" })

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h1>Course Details</h1>
                    <div class="content-box-md" style="margin-bottom: 40px;">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-6 col-sm-6">
                                    <div id="user-left3">
                                        <label>Course Name</label><br>
                                        @Html.EditorFor(m => m.coursename, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Course name" } })
                                        @Html.ValidationMessageFor(m => m.coursename, "", new { @class = "error" })

                                        <label>Professor/Lecturer</label><br>
                                        @Html.EditorFor(m => m.professor, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Professor Name" } })
                                        @Html.ValidationMessageFor(m => m.professor, "", new { @class = "error" })

                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6">
                                    <div id="user-right3">
                                        <label>Course Code</label><br>

                                        @Html.EditorFor(m => m.coursecode, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Course name" } })
                                        @Html.ValidationMessageFor(m => m.coursecode, "", new { @class = "error" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>



                    <h1>Selling Information</h1>
                    <div class="content-box-md" style="margin-bottom: 40px;">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-6 col-sm-6">
                                    <div id="user-left3">
                                        <label>Sell For*</label><br>
                                        <input type="radio" id="male" name="sell" value="male">
                                        <label for="male">Free</label>
                                        <input type="radio" id="female" name="sell" value="female">
                                        <label for="female">Paid</label>
                                        <div class="formgroup">
                                            <label>Sell Price</label>
                                            @Html.EditorFor(m => m.price, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your selling price " } })
                                            @Html.ValidationMessageFor(m => m.price, "", new { @class = "error" })

                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6">
                                    <div id="user-right3">
                                        <label>Note Preview</label><br>

                                        <input type="file" class="form-control4" name="notepreview">

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <a class="btn001" style="margin-left:170px !important"> SAVE</a>
                <button class="btn001" type="submit"> Publish</button>

                <div class="container" style="margin-top: 60px">
                    <div class="row">
                        <div class="col-md-6">
                            <p>
                                Copyright &copy; Tatvasoft Allrights Reserved
                            </p>
                        </div>
                        <div class="col-md-6">
                            <ul class="social-list pull-righ">
                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
</form>
