                    </ul>
                </div>
            </div>

        </nav>
        <div class="collapse navbar-collapse" style="margin-top: 10px;">
            <ul class="nav navbar-nav pull-right">
                <li><a class="smooth-scroll" href="/NoteDetails/SearchNotes" style="color: black">Search Notes</a></li>
                <li><a class="smooth-scroll" href="/NoteDetails/DashBoard" style="color: black">Sell Your Notes</a></li>
                <li><a class="smooth-scroll" href="/Auth/FAQ" style="color: black">FAQ</a></li>
                <li><a class="smooth-scroll" href="/Auth/ContactUs" style="color: black">ContactUs</a></li>
                <li> <a class="btn">Logout</a> </li>
            </ul>
        </div>
    </div>
</div>
<!--profile pic-->
<div id="statment">
    <div class="content-box-lg">
        <div class="container">
            <div class="row">
                <div class="col-md-12 wow  wow fadeInUp">
                    <div id="tech-statment" class="text-center">
                        <h3>Search Notes</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<body>

    <section id="searchnotes">
        <div class="search-under1">
            <h1>Search And Filter notes</h1>
            <form action="/NoteDetails/SearchNotes" method="get" id="searchs">
                <div class="form-iner8">
                    <input type="search" style="padding-left:25px;" value="@Request.QueryString["searchn"]" name="searchn" placeholder="Search notes here" class="form-control" onchange='onSubmit()'>
                    <span toggle="#search" class="fa fa-search field-icon1"></span>

                    <div class="container">
                        <div class="row">
                            <div class="col-md-2 col-sm-4">


                                <select id="st" name="type" onchange="onSubmit()">
                                    <option value="">Select Type</option>
                                    @foreach (NoteMarket.Models.Type type1 in type)
                                    {
                                        <option value="@type1.Type1">@type1.Type1</option>
                                    }
                                </select>
                                <script>
                                            $("#st").val("@Request.QueryString["type"]");
                                </script>

                            </div>
                            <div class="col-md-2 col-sm-4" style="margin-left:-15px !important;">


                                <select id="st" class="cat" name="category" onchange="onSubmit()">
                                    <option value="">Select category</option>

                                    @foreach (NoteMarket.Models.Category category1 in category)
                                    {
                                        <option value="@category1.Category1">@category1.Category1</option>
                                    }
                                </select>
                                <script>
                                            $(".cat").val("@Request.QueryString["category"]");
                                </script>


                            </div>
                            <div class="col-md-2 col-sm-4">

                                <select name="university" id="st" class="uni" onchange="onSubmit()">
                                    <option value="">Select University</option>
                                    @foreach (NoteMarket.Models.NoteDetail university1 in university)
                                    {
                                        <option value="@university1.University">@university1.University</option>
                                    }
                                </select>
                                <script>
                                            $(".uni").val("@Request.QueryString["university"]");
                                </script>

                            </div>
                            <div class="col-md-2 col-sm-4" style="margin-left:55px !important;">

                                <select name="course" id="st" class="cou" onchange="onSubmit()">
                                    <option value="">Select Course</option>
                                    @foreach (NoteMarket.Models.NoteDetail course1 in course)
                                    {
                                        <option value="@course1.Course">@course1.Course</option>
                                    }
                                </select>
                                <script>
                                            $(".cou").val("@Request.QueryString["course"]");
                                </script>
                            </div>
                            <div class="col-md-2 col-sm-4">


                                <select id="st" name="country" class="con" onchange="onSubmit()">
                                    <option value="">Select country</option>
                                    @foreach (NoteMarket.Models.Country country1 in country)
                                    {
                                        <option value="@country1.Country1">@country1.Country1</option>
                                    }
                                </select>
                                <script>
                                            $(".con").val("@Request.QueryString["country"]");
                                </script>
                            </div>
                            <div class="col-md-2 col-sm-4">

                                <select name="rate" class="rat" id="st" onchange="onSubmit()">
                                    <option value="">Select rating</option>
                                    @foreach (NoteMarket.Models.Rating rating1 in rate)
                                    {
                                        <option value="@rating1.Rate">@rating1.Rate</option>
                                    }
                                </select>
                                <script>
                                            $(".rat").val("@Request.QueryString["rate"]");
                                </script>
                            </div>

                        </div>
                    </div>
                </div>

            </form>
            <!-- notes -->
            <div class="search-under2">
                <h1>Total 18 notes</h1>
                <div class="bo">
                    <div class="container">
                        <div class="row">
                            @foreach (NoteMarket.Models.NoteDetail note1 in Model)
                            {
                                if (note1.Status == "Published")
                                {
                                <div class="col-md-4 col-sm-6">
                                    <a href="/NoteDetails/notedetail/@note1.Id">

                                        <img src=@Url.Content(@note1.DisplayPic) alt="img">

                                        <h1 name="note">@note1.NoteTitle</h1>
                                        <span class="fa fa-university field-icon2"></span>
                                        <p class="te">@note1.University,@note1.Country</p>
                                        <span class="fa fa-book field-icon2"></span>
                                        <p class="te">@note1.NoOfPages</p>
                                        <span class="fa fa-calendar field-icon2"></span>
                                        <p class="te">@note1.ApprovedDate</p>
                                        <span class="fa fa-flag field-icon2"></span>
                                        <p class="img-rd">5 Users marked this note as inappropriate</p>
                                        <i class="fa fa-star fil1"></i>
                                        <i class="fa fa-star fil1"></i>
                                        <i class="fa fa-star fil1"></i>
                                        <i class="fa fa-star fil1"></i>

                                        <p class="re">100Reviews</p>
                                    </a>
                                </div>
                                    }
                                }

                        </div>
                        <!--slider-->
                        <ul class="pagination">
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>

                            <li class="page-item"><a class="page-link btn-pagination" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">4</a></li>
                            <li class="page-item"><a class="page-link" href="#">5</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                        <div class="container">
                            <div class="under-search-3">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p>
                                            Copyright &copy; Tatvasoft Allrights Reserved
                                        </p>
                                    </div>
                                    <div class="col-md-6">
                                        <ul class="social-list pull-righ">
                                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                            <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @if (TempData["Success"] != null)
                    {
                        <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
                    }

</section>
</body>
<script>
    function onSubmit() {
        document.getElementById('searchs').submit();
    }

</script>