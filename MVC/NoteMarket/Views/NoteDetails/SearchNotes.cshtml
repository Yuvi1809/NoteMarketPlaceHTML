
@{
    IEnumerable<NoteMarket.Models.Category> category = ViewData["Category"] as IEnumerable<NoteMarket.Models.Category>;
    IEnumerable<NoteMarket.Models.Country> country = ViewData["Country"] as IEnumerable<NoteMarket.Models.Country>;
    IEnumerable<NoteMarket.Models.Type> type = ViewData["Type"] as IEnumerable<NoteMarket.Models.Type>;
    IEnumerable<NoteMarket.Models.Rating> rate = ViewData["Rate"] as IEnumerable<NoteMarket.Models.Rating>;
    IEnumerable<NoteMarket.Models.NoteDetail> course = ViewData["Course"] as IEnumerable<NoteMarket.Models.NoteDetail>;
    IEnumerable<NoteMarket.Models.NoteDetail> university = ViewData["University"] as IEnumerable<NoteMarket.Models.NoteDetail>;

    ViewBag.Title = "SearchNotes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using PagedList.Mvc;
<!--Logo-->
<div class="container">
    <a href="#user" class="navbar-brand smooth-scroll">
        <img src="~/images/home/logo.png" alt="top logo" class="topi" style="border-radius: 0%">
    </a>
    <div class="container">
        <nav class="navbar navbar-fixed-top">

            <!-- Mobile Menu Open Button -->
            <span id="mobile-nav-open-btn">&#9776;</span>
            <!-- Logo -->
            <!-- Mobile Menu -->
            <div id="mobile-nav">
                <!-- open -->
                <span id="mobile-nav-close-btn">&times;</span>

                <div id="mobile-nav-content">
                    <ul class="nav">
                        <li><a class="smooth-scroll" href="/NoteDetails/SearchNotes">Search Notes</a></li>
                        <li><a class="smooth-scroll" href="/NoteDetails/DashBoard">Sell Your Notes</a></li>
                        <li><a class="smooth-scroll" href="/Auth/FAQ">FAQ</a></li>
                        <li><a class="smooth-scroll" href="/Auth/ContactUs">ContactUs</a></li>
